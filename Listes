#9
def carre():
    return [True, False][randint(0,1)]

l2_91=[[carre() for i in range(5)]for j in range(5)]
print(l2_91)
a,b=0,0
for i in l2_91:
    for j in i:
        if j:
            square(a, 0-b, 20)
        a=a+20
    a=0
    b=b+20
done()
